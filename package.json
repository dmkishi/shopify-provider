{
  "name": "@dmkishi/shopify-provider",
  "description": "Simple wrapper over the Shopify GraphQL Admin API w/ handy abstraction for bulk operations.",
  "version": "1.0.5",
  "author": "DM Kishi <dm.kishi@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmkishi/shopify-provider.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "publish": "sh .husky/pre-push && npm run build && npm publish",
    "build": "npm run build:clean && npm run build:esm",
    "build:esm": "tsc",
    "build:clean": "rm -rf ./dist/*",
    "prepare": "husky"
  },
  "dependencies": {
    "@shopify/admin-api-client": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  }
}
